@model FinalProjectAl1.Data.LeaveType

@{
    ViewData["Title"] = "Edit Leave Type";
}

<h1>Edit</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="LeaveTypeId" />
            <div class="form-group">
                <label asp-for="LeaveTypeName" class="control-label"></label>
                <input asp-for="LeaveTypeName" class="form-control" />
                <span asp-validation-for="LeaveTypeName" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <label asp-for="LeaveTypeNumberOfDays" class="control-label"></label>
                <input asp-for="LeaveTypeNumberOfDays" class="form-control" />
                <span asp-validation-for="LeaveTypeNumberOfDays" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-warning" />
                <a asp-action="Index" class="btn btn-primary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
